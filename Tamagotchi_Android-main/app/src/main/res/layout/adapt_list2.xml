<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_icon2"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:src="@drawable/lonlon"></ImageView>

    <RelativeLayout
        android:layout_margin="@dimen/example_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/item_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_default_name"/>

        <TextView
            android:id="@+id/item_price2"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name2"
            android:text="@string/item_default_price"></TextView>

    </RelativeLayout>

    <Button
        android:id="@+id/useButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="use" />

</LinearLayout>